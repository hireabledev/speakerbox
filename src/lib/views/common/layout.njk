<!doctype html>
<html>
  <head>
    {% include "common/meta.njk" %}
    {% if description %}<meta name="description" content="{{ description }}">{% endif %}
    {% if keywords %}<meta name="keywords" content="{{ keywords }}">{% endif %}
    {% if author %}<meta name="author" content="{{ author }}">{% endif %}
    {% if APP_DIR === 'marketing' %}
      <base href="/">
    {% else %}
      <base href="/{{ APP_DIR }}">
    {% endif %}
    <title>{% if title %}{{ title }} - {% endif %}Speaker Box</title>
    {% include "common/styles.njk" %}
    {% for asset in assets.common.css %}
      <link rel="stylesheet" href="{{ STATIC_URL }}/{{ asset }}">
    {% endfor %}
    {% for asset in assets.vendor.css %}
    <link rel="stylesheet" href="{{ STATIC_URL }}/{{ asset }}">
    {% endfor %}
    {% for asset in assets[APP_DIR].css %}
      <link rel="stylesheet" href="{{ STATIC_URL }}/{{ asset }}">
    {% endfor %}
    {% include "common/icons.njk" %}
    {% block head %}{% endblock %}
    {% include "common/analytics.njk" %}
    {% if ADSENSE_ID %}
      <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
      <script>
        (adsbygoogle = window.adsbygoogle || []).push({
          google_ad_client: "{{ ADSENSE_ID }}",
          enable_page_level_ads: true
        });
      </script>
    {% endif %}
  </head>
  <body>
    {% block body %}<div id="root"></div>{% endblock %}
    {% block footer %}{% include "common/footer.njk" %}{% endblock %}
    {% include "common/end.njk" %}
    {% block end %}
      {% for asset in assets.common.js %}
        <script src="{{ STATIC_URL }}/{{ asset }}"></script>
      {% endfor %}
      {% for asset in assets.vendor.js %}
        <script src="{{ STATIC_URL }}/{{ asset }}"></script>
      {% endfor %}
      {% for asset in assets[APP_DIR].js %}
        <script src="{{ STATIC_URL }}/{{ asset }}"></script>
      {% endfor %}
    {% endblock %}
  </body>
</html>
