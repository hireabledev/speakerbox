{
  "env": {
    "development": {
      "presets": [
        "es2015",
        "react",
        "stage-3"
      ],
      "plugins": [
        "transform-runtime",
        ["module-resolver", {
          "root": ["./src"]
        }]
      ],
    },
    "test": {
      "presets": [
        "es2015",
        "react",
        "stage-3"
      ],
      "plugins": [
        "transform-runtime",
        ["module-resolver", {
          "root": ["./src"]
        }],
        ["istanbul", {
          "exclude": ["**/*.spec.js"]
        }]
      ]
    },
    "production": {
      "presets": [
        "stage-3"
      ],
      "plugins": [
        "transform-runtime",
        "transform-es2015-modules-commonjs",
        ["module-resolver", {
          "root": ["./src"]
        }]
      ],
      "ignore": [
        "node_modules",
        "src/public",
        "*.jsx"
      ]
    }
  }
}
